<form method="POST" action="/admin/addNewWord" id="add-word-form" class="form-container">
    <h1>Expand the Wordbase!</h1>
    <div>
        <label for="word-entry">Word:</label>
        <input type="text" name="word" id="word-entry">
        <p class="error_text" id="error_word-entry"></p>
    </div>
    <div>
        <label for="definition-entry">Definition:</label>
        <textarea name="definition" id="definition-entry"></textarea>
        <p class="error_text" id="error_definition-entry"></p>
    </div>
    <div>
        <label for="tags-entry">Tags: (Separate unique tags with a comma ",")</label>
        <input type="text" name="tags" id="tags-entry" placeholder="e.g., drinks, food">
        <p class="error_text" id="error_tags-entry"></p>
    </div>
    <button type="submit">Add Word</button>
</form>

<script src="../../public/js/addWordVerification.js"></script>