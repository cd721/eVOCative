<article id="post_page" class="main_container">
  <div id="post_info">
    <h1>{{ post.title }}</h1>
    <address>Posted by {{poster_name}} on {{post.post_date}}</address>
  </div>

  <p>{{ post.post }}</p>

  {{> tags post}}
  <br>

  <div class="comments_list">

  </div>
  <br>
  <div class="new_comment">
    <h4>Leave a comment on this post</h4>

    <form action="/forum/{{post._id}}" method="POST" id="submit_comment">
      <label for="comment">Comment:</label>
      <textarea name="comment" placeholder="enter comment" id="comment"></textarea>
      <p id="error_comment"></p>

      <input type="hidden" name="postID" value="{{post._id}}">
      <input type="submit" value="Add Comment">
    </form>
  </div>

    <section id="comments-section">
        <ul id="comments-list">
          {{#if comments}}
          {{#each comments}}
          <li class="individual-post">
              <div>
                <p>{{datePostSingle this.comment_date}} | {{this.name}}</p>
              </div>
              <p class="post-content">{{this.body}}</p>
          </li>
          {{/each}}

          {{else}}
          <li class="individual-post">
            <p id="no-comments">No comments yet. Start the conversation below!</p>
          </li>
        </ul>
        {{/if}}

    </section>

    <form action="/forum/{{post._id}}" method="POST" id="submit-comment" class="form-container">
        <h2>Leave a comment on this post</h2>

        <div>
          <label for="comment">Comment:</label>
          <textarea id="comment" name="comment" placeholder="Enter comment"></textarea>
        </div>

        <input type="hidden" name="postID" value="{{post._id}}">
        <button type="submit">Add Comment</button>
    </form>
    {{!-- <a class="link_back" href="/forum">Back to All Posts</a> --}}
</article>

<script src="../../public/js/commentVerification.js"></script>