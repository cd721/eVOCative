<h1>Make a Post</h1>
<form action="/forum" method="POST" class="new-post-form">
  <label>
    Post Title <br>
    <input type="text" name="title" placeholder="Post Title" value="{{post.title}}" class="full-width-input">
  </label>
  <br>
  <label for="post-body">
    Post Body
  </label>
  <br>
  <textarea id="post-body" name="body" rows="4" placeholder="Post Content"
    class="full-width-input">{{post.body}}</textarea>
  <br>
  <label for="poster_id">
    Poster
  </label>
  <br>
  <select class="full-width-input" name="poster_id" id="poster_id">
    <option value="">Select User...</option>
    {{#each users}}
    <option value="{{_id}}">{{firstName}} {{lastName}}</option>
    {{/each}}
  </select>
  <br>
  <label>
    Tags (separated by comma)<br><input type="text" name="tags">
  </label>
  <br>

  <button type="submit">Create New Post</button>
  <button type="reset">Clear Form</button>
  {{!-- <input type="hidden" name='_method' value="PUT" /> --}}
</form>
{{#if hasErrors}}
<ul class="error-list">
  {{#each errors}}
  <li>
    {{this}}
  </li>
  {{/each}}
</ul>
{{/if}}

</article>