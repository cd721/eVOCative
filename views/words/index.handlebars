<article id="my-words-page" class="index-container">
    <h1>My Words</h1>
    <ul>
        {{#each words}}
        <li>
            <div class="card-top">
                <p>Collected</p>
                <p>{{dateWordIndex this.date_user_received_word}}</p>  
            </div>
            {{#if this.flagged_for_deletion}}
            <h2 class="flagged_for_deletion">{{this.word}}</h2>
            {{else}}
            <h2>{{this.word}}</h2>
            {{/if}}
            <div class="card-bottom">
                <a href="/words/{{this._id}}">View</a>
            </div>
        </li>
        {{/each}}
    </ul>
</article>