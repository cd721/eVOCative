<section id="word_index" class="main_container">
    <h1>My Words</h1>
    <ul>
        {{#each words}}
        <li>
            <a href="/words/{{this._id}}">
                {{#if this.flagged_for_deletion}}
                <h2 class="flagged_for_deletion">{{this.word}}</h2>

                {{else}}

                <h2>{{this.word}}</h2>

                {{/if}}

                <p class="date_added">{{dateWordIndex this.date_user_received_word}}</p>
            </a>
        </li>
        {{/each}}
    </ul>
</section>