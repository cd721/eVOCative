<article id="report_page" class="main_container">
    <h1>Report Content</h1>

    <form action="/report" method="POST" id="report">

        {{#if errors}}
        {{#each errors}}
        <p class="error_top">{{this}}</p>
        {{/each}}
        {{/if}}

        

        <div class="input_container">
            <label for="explanation">Explain why you want to report this content:</label>
            <textarea name="explanation" id="explanation" value="explanation" rows="4"></textarea>
            <p class="error_text" id="error_explanation"></p>
        </div>

        <button type="submit">Make a Report</button>
    </form>

</article>