<h1>Register</h1>

{{#if error}}
<p class="error-text">{{error}}</p>
{{/if}}
<form action="/register" method="POST" id="signup">
  <label for="fname">First Name:
    <input id="fname" name="fname" type="text" placeholder="EX: John" value="{{fname}}" /></label>
  <br />

  <label for="lname">Last Name:
    <input id="lname" name="lname" type="text" placeholder="EX: Doe" value="{{lname}}" /></label>
  <br />

  <label for="email">Email:
    <input
      id="email"
      name="email"
      type="email"
      placeholder="EX: jdoe@gmail.com"
      value="{{email}}"
    />
  </label>
  <br />

  <label for="username">Username:
    <input id="username" name="username" type="text" value="{{username}}" />
  </label>
  <br />

  <label for="password">Password:
    <input id="password" name="password" type="password" />
  </label>
  <br />

  <label for="confirmPassword">Confirm Password:
    <input id="confirmPassword" name="confirmPassword" type="password" />
  </label>
  <br />

  <button type="submit" class="Button">Submit</button>
</form>