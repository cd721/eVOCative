<div class="profile">
    <div id="user-info">
        <h2>I'm an admin.</h2>
        <h3>{{user.firstName}} {{user.lastName}}</h3>
        <h4>@{{user.username}}</h4>
        <p>User since {{dateProfile user.start_date}}</p>
    </div>

    <div id="admin-panel">
        <h2>Admin Panel</h2>

        <h3>Tickets</h3>
        <ul>
            <li>
                <a href="/admin/tickets">
                    <p>Check Tickets</p>
                </a>
            </li>
        </ul>

        <h3>Word Database</h3>
        <ul>
            <li>
                <a href="/admin/addNewWord">
                    <p>Add a New Word</p>
                </a>
            </li>
            <li>
                <a href="/words/all">
                    <p>See All Words</p>
                </a>
            </li>
        </ul>

        <h3>Users Database</h3>
        <ul>
            <li>
                <a href="/users">
                    <p>View Users</p>
                </a>
            </li>
            <li>
                <a href="/admin">
                    <p>View Admins</p>
                </a>
            </li>
        </ul>
    </div>

    <div id="user-stats">
        <h2>Statistics</h2>
        <ul>
            <li>
                <p>Streak</p>
                {{#if streakOneDay}}
                <h4>{{user.streak}} day</h4>
                {{else}}
                <h4>{{user.streak}} days</h4>
                {{/if}}
            </li>
            <li>
                <p>Longest Streak</p>
                {{#if longestStreakOneDay}}
                <h4>{{user.longest_streak}} day</h4>
                {{else}}
                <h4>{{user.longest_streak}} days</h4>
                {{/if}}
            </li>
            <li>
                <p>Accuracy Score</p>
                <h4>{{toPercentage user.accuracy_score}}%</h4>
            </li>
            <li>
                <p>Total Words</p>
                <h4>{{user.words.length}} words</h4>
            </li>
        </ul>
    </div>

    <div id="user-words">
        <h2>Word Bank</h2>
        {{#if words}}
        <div class="words-container">
            <ul>
                {{#each words}}
                <li>
                    <a href="/words/{{this._id}}">
                        <h4>{{this.word}}</h4>
                        <p>{{this.definition}}</p>
                    </a>
                </li>
                {{/each}}
            </ul>
        {{else}}
        <div id="no-words" class="words-container">
            <h3>No words yet!</h3>
            <a href="/words">Add some words</a>
        </div>
        {{/if}}
        </div>

        <div id="WOD-Announcement">
            {{#if WOD}}
                <h3>You have collected the Word of the day!</h3>
            {{/if}}
        </div>
    </div>

    <div id="share_score">
        <a href="/forum/newScore">Share your Accuracy Score?</a>
    </div>

    <div id="admin-panel">
        <h2>Admin Options</h2>
        <div id="add-new-word">
            <a href="/admin/addNewWord">Add A New Word</a>
        </div>
        <div id="check-tickets">
            <a href="/admin/tickets">Check Tickets</a>
        </div>
        <div id="see-all-words">
            <a href="/words/all">See All Words</a>
        </div>
    </div>
    {{/if}}
</div>

